# API Configuration
API_KEY=dev-key-12345
API_VERSION=1.0.0

# CORS Origins (comma-separated)
CORS_ORIGINS=["http://localhost:5173","http://localhost:3000"]

# Model Configuration
MODEL_PATH=./models/plankton_model.pth
MODEL_VERSION=1.0.0
MODEL_BACKUP_DIR=./models/versions

# Inference Configuration
INFERENCE_WORKERS=2
MAX_FRAME_SIZE=5242880
DEFAULT_CONFIDENCE_THRESHOLD=0.5

# Device Configuration (cpu, cuda, mps)
DEVICE=cpu
USE_EDGE_TPU=false

# Training Configuration
TRAINING_BUFFER_SIZE=1000
TRAINING_BUFFER_PATH=./data/replay_buffer
TRAINING_BATCH_SIZE=16
TRAINING_LEARNING_RATE=0.0001
TRAINING_EPOCHS=10
TRAINING_VALIDATION_SPLIT=0.2
TRAINING_MIN_ACCURACY=0.85
FREEZE_BACKBONE=true

# Data Storage
SNAPSHOT_DIR=./data/snapshots
LOG_DIR=./logs
